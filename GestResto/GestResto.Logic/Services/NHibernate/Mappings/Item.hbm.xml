<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="GestResto.Logic"
                   namespace="GestResto.Logic.Model.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="Item" table="Items">

    <id name="IdItem">
      <column name="idItem" not-null="true" sql-type="INTEGER" />
      <generator class="identity" />
    </id>

    <property name="Nom">
      <column name="nom" not-null="true" sql-type="VARCHAR" />
    </property>

    <set name="Formats" table="FormatsItems" generic="true">
      <key>
        <column name="IdItem" not-null="true" sql-type="INTEGER" />
      </key>

      <composite-element class="FormatItem">
        <many-to-one name="Formats" class="Format" fetch="join">
          <column name="IdFormat" not-null="true" sql-type="INTEGER" />
        </many-to-one>
        <property name="Prix">
          <column name="Prix" not-null="false" sql-type="FLOAT" />
        </property>
      </composite-element>
    </set>
  </class>
</hibernate-mapping>
