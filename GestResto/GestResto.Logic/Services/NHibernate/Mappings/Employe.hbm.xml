<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="GestResto.Logic"
                   namespace="GestResto.Logic.Model.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="Employe" table="employes">
    
    <id name="idEmploye">
      <column name="idEmploye" not-null="true" sql-type="INTEGER" />
      <generator class="identity" />
    </id>
    
    <many-to-one name="type" class="typeEmploye" lazy="proxy">
      <column name="idType" not-null="true" sql-type="INTERGER" />
    </many-to-one>
    
    <property name="sNom">
      <column name="nom" not-null="true" sql-type="VARCHAR" />
    </property>
    
    <property name="sPrenom">
      <column name="prenom" not-null="true" sql-type="VARCHAR" />
    </property>
    
    <property name="noEmploye">
      <column name="noEmploye" not-null="true" sql-type="INTEGER" />
    </property>

    <property name="sMotDePasse">
      <column name="motPasse" not-null="true" sql-type="INTEGER" />
    </property>

    <property name="sAdresse">
      <column name="adresse" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="sVille">
      <column name="ville" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="sCodePostal">
      <column name="codePostal" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="sNAS">
      <column name="NAS" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="fSalaire">
      <column name="tauxHoraire" not-null="true" sql-type="FLOAT" />
    </property>

    <property name="sTelephone">
      <column name="telephone" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="bActif">
      <column name="actif" not-null="true" sql-type="BOOLEAN" />
    </property>
    
    <bag name="Commandes" inverse="true" generic="true" lazy="true" cascade="all">
      <key>
        <column name="idEmploye" />
      </key>
      <one-to-many class="Commande"/>
    </bag>
  </class>
  
</hibernate-mapping>
