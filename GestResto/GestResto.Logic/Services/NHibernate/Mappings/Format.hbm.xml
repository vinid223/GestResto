<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="GestResto.Logic"
                   namespace="GestResto.Logic.Model.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="Format" table="Formats">

    <id name="IdFormat">
      <column name="idFormat" not-null="true" sql-type="INTEGER" />
      <generator class="identity" />
    </id>

    <property name="Nom">
      <column name="nom" not-null="true" sql-type="VARCHAR" />
    </property>
    
    <property name="Libelle">
      <column name="libelle" not-null="true" sql-type="VARCHAR" />
    </property>

    <property name="Prix">
      <column name="prix" not-null="true" sql-type="FLOAT" />
    </property>

    
    
    
    <set name="Prix" cascade="save-update" table="formatsitems">
      <key column="idFormat"/>
      <many-to-many column="idItem" class="Item"/>
    </set>
  </class>
  
  <class name="Item" table="Items">
    <id name="IdItem" type="int" column="idItem">
      <generator class="native"/>
    </id>
    <property name="Prix" column="prix" type="float"/>
  </class>
  
</hibernate-mapping>
