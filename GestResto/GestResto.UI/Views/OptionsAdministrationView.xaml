        <Button x:Name="btnFormats" Content="Gérer les formats" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Width="223" Height="39"/>
        <Button x:Name="btnInfoResto" Content="Gérer les Informations du Restaurant" HorizontalAlignment="Left" Margin="267,73,0,0" VerticalAlignment="Top" Width="223" Height="39" Click="btnGererInformationsRestaurants"/>
